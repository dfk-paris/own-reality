{
  "name": "ownreality",
  "version": "0.5.0",
  "description": "== README.md",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deps": "widgets/build.sh deps",
    "deps:watch": "onchange node_modules/ -- npm run deps",
    "lib": "widgets/build.sh lib",
    "lib:watch": "onchange widgets/lib -- npm run lib",
    "i18n": "widgets/build.sh i18n",
    "i18n:watch": "onchange widgets/locale -- npm run i18n",
    "tags": "riot widgets/tags tmp/tags.js --colors",
    "tags:watch": "onchange widgets/tags -- npm run tags",
    "bundle": "cat tmp/deps.js tmp/lib.js tmp/i18n.js tmp/tags.js > public/app.js",
    "bundle:watch": "onchange tmp/deps.js tmp/lib.js tmp/i18n.js tmp/tags.js -- npm run bundle",
    "build": "npm run deps && npm run lib && npm run i18n && npm run tags && npm run bundle",
    "watch": "npm run build && parallelshell 'npm run deps:watch' 'npm run lib:watch' 'npm run tags:watch' 'npm run i18n:watch' 'npm run bundle:watch'",
    "server": "cd public; python -m SimpleHTTPServer 3000;",
    "pack": "npm run build && cat tmp/deps.js tmp/lib.js tmp/tags.js > tmp/or.min.js",
    "upload": "npm run pack && scp tmp/or.min.js root@192.168.30.214:/var/storage/host/static/current/public/or.min.js"
  },
  "repository": {
    "type": "git",
    "url": "https://git.dfkg.org/git/own_reality.git"
  },
  "author": "Moritz Schepp <moritz.schepp@gmail.com>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "chai": "^3.5.0",
    "coffee-script": "^1.10.0",
    "glob": "^7.0.3",
    "jquery": "^2.2.3",
    "jquery-ui": "^1.10.5",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coffee-preprocessor": "^1.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-mocha-reporter": "^2.0.3",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-riot": "^1.1.0",
    "mocha": "^2.4.5",
    "node-sass": "^3.4.2",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "phantomjs-prebuilt": "^2.1.7",
    "riot": "^2.4.0",
    "uglify-js": "^2.6.1",
    "vis": "^4.14.0"
  }
}
