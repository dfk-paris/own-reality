          <div
            or-db-timeline="true"
            or-form="form"
            or-aggregations="chrono_aggregations"
            or-excess="chrono_excess"
            or-total="chrono_total"
            or-per-page="form.chrono_per_page"
            ng-hide="chrono_excess"
          ></div>

          <div
            class="or-excess text-center"
            ng-show="chrono_excess"
          >
            <h2>Too much data</h2>
            <p>
              Your search would currently produce
              <strong>{{chrono_total}}</strong> results. This widget can only
              display a maximum of 100 items. Please add more criteria to lower
              the amount of search results
            </p>

            <button
              ng-click="form.chrono_per_page = 2000"
              class="btn btn-warning"
            >I understand, show them anyways</button>
          </div>
        </div>
      </div>

      <h2>
        {{ 'article' | t:{count: 'other'} | capitalize }}
        <small>{{ 'amount_found' | t:{interpolations: {o: main.total} } }}</small>
      </h2>

      <hr class="invisible" />

      <div class="row">
        <div class="col-md-4">
          <div class="form-group text-right">
            <input
              class="form-control or-autocomplete-journals"
              type="text"
              placeholder="Zeitschriften"
            />
            <a
              href="#"
              data-toggle="modal"
              data-target="#journal-modal"
            >{{'more' | t}} ...</a>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group text-right">
            <input
              class="form-control or-autocomplete-people"
              type="text"
              placeholder="Autoren"
            />
            <a
              href="#"
              data-toggle="modal"
              data-target="#people-modal"
            >{{'more' | t}} ...</a>
          </div>
        </div>
        <div class="col-md-4">
          <div class="or-criteria text-right">
            <ul class="list-inline">
              <li class="label label-default">
                Regan Reynolds
                <i class="fa fa-remove"></i>
              </li>
              <li class="label label-default">
                Pagac and Sons
                <i class="fa fa-remove"></i>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <nav
            wu-pagination="main.page"
            wu-total="main.total"
            wu-per-page="10"
            wu-use-search="true"
          >
            <ul class="pager">
              <li class="previous"><a href="#">&larr; {{'previous' | t}}</a></li>
              <li class="next"><a href="#">{{'next' | t}} &rarr;</span></a></li>
              <li>
                <span class="text-muted">
                  {{'page' | t}} {{main.page}}/{{main.total_pages()}}
                </span>
              </li>
            </ul>
          </nav>

          <ul class="or-results list-unstyled">
            <li class="or-source-list-item bg-warning" ng-repeat="record in main.results.records">
              <div class="or-box">
                <div class="pull-right or-preview">
                  <a
                    href="#"
                    data-toggle="modal"
                    data-target="#or-document-modal"
                    ng-click="set_current_hash(record, $event)"
                  >
                    <img
                      ng-src="{{file_url(record)}}"
                      ng-show="record._source.file_base_hash"
                      class="img-rounded"
                    >
                  </a>
                  <div class="text-right or-icon-bar">
                    <a
                      href="/api/entities/download/{{record._source.file_base_hash}}.pdf"
                      title="download"
                    >
                      <i class="fa fa-download"></i>
                    </a>
                  </div>
                </div>
                <div>
                  <small
                    class="text-muted"
                    ng-bind="record._source.people[12063] | people_list"
                  ></small>
                </div>
                <h4>
                  <div>
                    <span
                      ng-bind="record._source.id"
                      ng-show="debug()"
                      class="text-muted"
                    ></span>
                    <a
                      or-bind-translate="record._source.title"
                      href="#"
                      data-toggle="modal"
                      data-target="#or-source-modal"
                      ng-click="set_current_id(record, $event)"
                    ></a>
                  </div>
                  <small
                    class="text-muted"
                    ng-bind="bibliography(record)"
                  ></small>
                </h4>
                <p class="small">
                  <span or-bind-translate="record._source.interpretation"></span>
                </p>
                <div class="clearfix"></div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div id="people-modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Personen</h4>
        </div>
        <div class="modal-body">
          <table class="table table-bordered">
            <tr ng-repeat="row in ds().grouped_people">
              <td ng-repeat="person in row" ng-bind="person" class="or-selectable"></td>
            </tr>
          </table>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" data-dismiss="modal">fertig</button>
        </div>
      </div>
    </div>
  </div>

  <div id="journal-modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Zeitschriften</h4>
        </div>
        <div class="modal-body">
          <table class="table table-bordered">
            <tr ng-repeat="row in ds().grouped_journals">
              <td ng-repeat="person in row" ng-bind="person" class="or-selectable"></td>
            </tr>
          </table>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" data-dismiss="modal">fertig</button>
        </div>
      </div>
    </div>
  </div>

  <div
    or-source-dialog="current_id"
    or-current="current"
  ></div>

  <div
    or-document-dialog="current_document_hash"
  ></div>
</div>
