<div class="container" ng-controller="query_controller">
  <div class="row">
    <div class="col-md-3">
      <h2>Suche</h2>
      <form>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            placeholder="Volltextsuche"
            ng-model="main.filters.terms"
            wu-delayed-model="true"
          />
        </div>
        <div class="checkbox or-characteristic">
          <label>
            <input type="checkbox" />
            <small>nur in Zusammenfassung suchen</small>
          </label>
        </div>

        <div ng-show="main.filters.refs.length > 0">
          <hr />
          <span class="or-criterion" ng-repeat="ref in main.filters.refs">
            <span
              class="label label-default"
              ng-click="remove_ref(ref, $event)"
              title="{{lookup[ref]._source.name[config.locale]}}"
            >
              {{lookup[ref]._source.name[config.locale] | limitTo:25}}
              <i class="fa fa-remove"></i> 
            </span>
          </span>
        </div>

        <hr />

        <div
          class="or-slider"
          or-slider-lower="main.filters.lower"
          or-slider-upper="main.filters.upper"
        ></div>

        <div class="text-muted">
          <div class="pull-right">1989</div>
          <div class="pull-left">1960</div>
          <div class="text-center">
            <span ng-bind="main.filters.lower"></span>
            –
            <span ng-bind="main.filters.upper"></span>
          </div>
        </div>

        <hr />

        <div class="small">
          <div
            class="or-criteria"
            ng-repeat="(key, agg) in main.results.aggregations"
            ng-show="agg.buckets.length > 0"
          >
            <div>
              <strong class="text-uppercase" ng-bind="misc().categories[key][locale()]"></strong><br />
              <!-- <a href="#">... {{'more' | t}}</a> -->
            </div>
            <ul class="list-unstyled">
              <li ng-repeat="bucket in agg.buckets">
                <span
                  ng-bind="bucket.key"
                  ng-show="debug()"
                  class="text-muted"
                ></span>
                <a
                  href="#"
                  ng-bind="lookup[bucket.key]._source.name[config.locale]"
                  ng-click="add_ref(bucket.key, $event)"
                ></a>
                ({{bucket.doc_count}})
              </li>
            </ul>
          </div>
        </div>

        <hr />
        
        <div class="form-group text-right">
          <input type="submit" class="btn btn-primary" value="Suchen" />
        </div>
      </form>
    </div>

