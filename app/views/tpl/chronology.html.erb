<div class="container" ng-controller="chronology_controller">
  <h1>Chronology</h1>
  <div class="row">
    <div class="col-md-9">
      <div
        or-timeline="items"
        or-current="current"
      ></div>
    </div>
    <div class="col-md-3">
      <h4 ng-bind="current._source.title[locale()]"></h4>
      <p ng-bind="current._source.content[locale()]"></p>
      <div ng-repeat="(k, v) in current._source.refs" ng-show="k">
        <div>{{k + ':'}}</div>
        <span ng-repeat="id in v">
          <span
            ng-bind="id"
            ng-show="debug()"
            class="text-muted"
          ></span>
          <span
            ng-bind="lookup[id]._source.name[locale()]"
            class="label label-default"
          ></span>
        </span>
      </div>
    </div>
  </div>
</div>